<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_header">

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/type_entries"
            app:entryValues="@array/type_values"
            app:key="type"
            app:title="@string/type_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="address"
            app:title="@string/address_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/protocol_entries"
            app:entryValues="@array/protocol_values"
            app:key="protocol"
            app:title="@string/protocol_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/crc_entries"
            app:entryValues="@array/crc_values"
            app:key="crc"
            app:title="@string/crc_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
